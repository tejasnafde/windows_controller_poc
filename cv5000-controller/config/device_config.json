    "l_axis": 0,
    "pd": 64.0,
    "chart_line": 1,
    "chart_mode": 1,
    "display_mode": 0
  },
  "validation": {
    "enable_range_checks": true,
    "enable_step_checks": true,
    "allow_partial_updates": true
  }
